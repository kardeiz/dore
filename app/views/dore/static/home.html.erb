<% content_for :title, title('dore.display.home') %>
<div class="row">
  <div class="col-md-9">
    <%= breadcrumbs_home %>
    <%= render 'dore/shared/home_text' %>
    <hr/>
    <div>
      <h4>Communities</h4>
      <%= top_communities(@service.top_communities) %>
    </div>
    <hr/>
    <div>
      <h4>Discover</h4>
      <div class="row">
        <%= home_facets(@service.sidebar_facets, @service.sidebar_facet_results) %>
      </div>
    </div>
    <hr/>
    <div>
      <h4>Recent Submissions</h4>
      <%= recent_submissions(@service.recent_submissions) %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="dore-sidebar-section">
      <h4>Search</h4>
      <div class="input-group">
        <input type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">Go</button>
        </span>
      </div>
    </div>
    <hr/>
  </div>
</div>

